{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true
  },
  "exclude": ["node_modules", "debug"]
}
